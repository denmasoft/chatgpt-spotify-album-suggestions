{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "baseUrl": "./src",
      "paths": {
          "*": ["*"]
      }
    },
      "include": [
          "src/**/*.ts"
      ],
      "exclude": [
          "node_modules"
      ]
  }